<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html lang="en" class="no-js">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="虹口教育">
    <meta name="author" content="上海教育软件有限公司">
    <title>@ViewBag.Title</title>

    <!-- css -->
    <link rel="stylesheet" href="~/assets/themes/agilelite/assets/agile/css/agile.layout.css">
    <link rel="stylesheet" href="~/assets/themes/agilelite/assets/third/flat/flat.component.css">
    <link rel="stylesheet" href="~/assets/themes/agilelite/assets/third/flat/flat.color.css">
    <link rel="stylesheet" href="~/assets/themes/agilelite/assets/third/flat/iconline.css">
    <link rel="stylesheet" href="~/assets/themes/agilelite/assets/app/css/app.css">
	 @RenderSection("Css",false)
    <style>
       body{font-family:Microsoft YaHei;}
       a{text-decoration:none}
       .code,.ios,.menubar,.titlebar,button{background-color:#2b2b2b}
       .page{top:45px;}
       .tab{background-color:#e5e5e5}
       .tab.active,.tab:active{border-bottom:none;color:#71c671}
       .listitem img{width:80%}
       .listitem,article{background-color:ivory}
    </style>
    <!-- /css -->

</head>
<body>

    <div id="aside_container">
        <aside id="left_push_aside" data-position="top" data-transition="overlay" class="" style="transition: none; left: 0px;">
            <div class="padded">
                左侧菜单<br>push效果为两块区域一起动
            </div>
        </aside>
    </div>

    <!-- container -->
    <div id="section_container">

        <!-- active content -->
        <section id="section" data-role="section" class="active">

            <!-- header -->
            <header>
                <!-- title -->
                <div class="titlebar">
                    <a data-toggle="back" href="#"><i class="iconfont iconline-arrow-left"></i></a>
                    <h1 class="title white"><font>@ViewBag.Title</font></h1>
					 	  <a data-toggle="close" href="#"><i class="iconfont iconline-mark-no"></i></a>
                </div>
                <!--/ title -->

                <!-- Menu -->
                <div id="tabbarOuter" data-scroll="horizontal">
                    <div class="scroller">
                        @RenderSection("MenuArea", required: false)
                    </div>
                </div>
                <!-- /Menu -->

            </header>
            <!-- /header -->

            <article data-role="article" id="article" class="active" >
                @RenderBody()
            </article>
		 
            <div id="section_container_mask" style="display: none;"></div>
        </section>
        <!-- /active content -->

	 	<footer>
	 		<nav class="menubar">
	 			<a class="menu" href="@Url.Action("Home","Course")">
	 				<span class="iconfont iconfont iconline-home myActiveList"></span>
	 				<span class="menu-text">首页</span>
	 			</a>
	 			<a class="menu" href="@Url.Action("List","Course")">
	 				<span class="iconfont iconfont iconline-notebook myActiveList"></span>
	 				<span class="menu-text">获奖视频</span>
	 			</a>
	 			<a class="menu" href="@Url.Action("CategoryList","Course")">
	 				<span class="iconfont iconline-search"></span>
	 				<span class="menu-text">分类检索	</span>
	 			</a>
	 			<a class="menu" href="@Url.Action("FavoriteList","Course")">
	 				<span class="iconfont iconfont iconfont iconline-uid myActiveList"></span>
	 				<span class="menu-text">我的收藏</span>
	 			</a>
	 		</nav>
	 	</footer>
    </div>
    <!-- /container -->
    <!-- scripts -->
    @Scripts.Render("~/js/jquery")
    @Scripts.Render("~/js/jquery/mobile")
    @Scripts.Render("~/js/IScroll")
    @Scripts.Render("~/js/angile")
    @Scripts.Render("~/js/app/seedsui")
    @Scripts.Render("~/js/appJs")
	 InitialSearchLink();
    @RenderSection("Scripts", required: false)
	 <script>
	 	InitialSearchLink();
	 </script>
    <!-- /scripts -->

</body>
</html>
